        <div id="votescontainer" >
        <h1 style="color: white;" class="unique" identifier=<%=results[0].pollid%>><%=results[0].pollsname%></h1>
        <% results.forEach(function (obj) { %>
            
            <div class="drag container form-control btn btn-default" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; font-size: 25px; height: 50px; width: 70%;" pollid="<%=obj.pollid%>" optionid="<%=obj.optionid%>" value="<%= obj.optionsname %>"><%= obj.optionsname %></div>
          
        <% })%>
        <h2></h2>
        <% for (let i=1; i<=results.length; i++) {%>
            
